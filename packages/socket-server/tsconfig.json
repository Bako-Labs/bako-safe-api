{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@modules/*": ["./modules/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"],
      "@mocks/*": ["./mocks/*"]
    }
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules"]
}
