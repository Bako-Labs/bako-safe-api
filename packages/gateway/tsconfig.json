{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./build",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "ts-gql-plugin"
      }
    ]
  },
  "include": ["src/**/*", "src/*", "**/*.graphql"],
  "exclude": ["node_modules"]
}
