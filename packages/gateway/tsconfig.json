{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "ts-gql-plugin"
      }
    ]
  },
  "include": ["src/**/*", "src/*", "**/*.graphql"],
  "exclude": ["node_modules"]
}
