{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "outputs": ["dist/sway/**"],
      "outputMode": "hash-only",
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"],
      "outputMode": "new-only",
      "cache": false
    },
    "test": {
      "dependsOn": ["^prebuild"],
      "outputs": ["dist/**"],
      "outputMode": "new-only",
      "cache": false
    },
    "db:dev:start": {
      "outputs": [],
      "outputMode": "new-only",
      "cache": false
    },
    "chain:dev:start": {
      "dependsOn": ["db:dev:start"],
      "outputs": [],
      "outputMode": "new-only",
      "cache": false
    },
    "socket:dev:start": {
      "dependsOn": ["db:dev:start"],
      "outputs": [],
      "outputMode": "new-only",
      "cache": false
    },
    "api:dev:start": {
      "dependsOn": ["db:dev:start", "chain:dev:start", "socket:dev:start"],
      "outputs": ["dist/**"],
      "outputMode": "new-only",
      "cache": false
    },
    "dev": {
      "dependsOn": ["api:dev:start"],
      "outputs": [],
      "outputMode": "new-only",
      "cache": false
    }
  }
}
